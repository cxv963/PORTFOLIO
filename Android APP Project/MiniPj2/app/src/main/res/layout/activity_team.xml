<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NorticeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="704dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="프로젝트 협업 도우미"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Project Collaboration Helper"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/CreateTeamButton"
                android:layout_width="164dp"
                android:layout_height="131dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:background="#03A9F4"
                android:scaleType="fitCenter"
                android:src="@drawable/team_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="팀 생성(Create Team)"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/JoinTeamButton"
                android:layout_width="164dp"
                android:layout_height="131dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="#03A9F4"
                android:scaleType="fitCenter"
                android:src="@drawable/join_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="팀 참가(Join Team)"
                android:textSize="25dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>